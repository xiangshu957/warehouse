<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.xxx.warehouse.custom.HeadView
            android:id="@+id/hv_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/acsp_client"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/rl_bg_one"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_1"
                android:layout_weight="1"
                android:background="@color/home2"
                android:onClick="onClick">


                <!--<ImageView
                    android:id="@+id/iv_bg_one"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:src="@drawable/img_download" />-->

                <TextView
                    android:id="@+id/tv_menu_one"
                    style="@style/home_menu"
                    android:layout_centerInParent="true"
                    android:text="@string/home_menu0" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_bg_two"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_1"
                android:layout_weight="1"
                android:background="@color/home1"
                android:onClick="onClick">

                <!-- <ImageView
                     android:id="@+id/iv_bg_two"
                     android:layout_width="@dimen/dp_80"
                     android:layout_height="@dimen/dp_80"
                     android:layout_centerInParent="true"
                     android:layout_marginBottom="@dimen/dp_10"
                     android:src="@drawable/img_scan" />-->

                <TextView
                    android:id="@+id/tv_menu_two"
                    style="@style/home_menu"
                    android:layout_centerInParent="true"
                    android:text="@string/home_menu1" />


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_bg_three"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_1"
                android:layout_weight="1"
                android:background="@color/home3"
                android:onClick="onClick">

                <!--<ImageView
                    android:id="@+id/iv_bg_three"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:src="@drawable/img_search" />-->

                <TextView
                    android:id="@+id/tv_menu_three"
                    style="@style/home_menu"
                    android:layout_centerInParent="true"
                    android:text="@string/home_menu2" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_bg_four"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_1"
                android:layout_weight="1"
                android:background="@color/home4"
                android:onClick="onClick">

                <!-- <ImageView
                     android:id="@+id/iv_bg_four"
                     android:layout_width="@dimen/dp_80"
                     android:layout_height="@dimen/dp_80"
                     android:layout_centerInParent="true"
                     android:layout_marginBottom="@dimen/dp_10"
                     android:src="@drawable/img_setting" />-->

                <TextView
                    android:id="@+id/tv_menu_four"
                    style="@style/home_menu"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/home_menu3" />


            </RelativeLayout>

        </LinearLayout>

